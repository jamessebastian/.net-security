@model Security.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Answers)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Ansswer</th>
                    <th>Date Posted</th>
                </tr>
                @foreach (var item in Model.Answers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnswerText)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DatePosted)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <form asp-action="SaveAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" name="QuestionID" value="@Html.DisplayFor(model => model.QuestionID)" />

                <textarea name="AnswerText" id="AnswerTextEditor" class="form-control"></textarea>

            </div>

            <div class="form-group">
                <input type="submit" value="Add Answer" class="btn btn-primary" />
            </div>
        </form>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.QuestionID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
